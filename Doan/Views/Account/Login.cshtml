@using Doan.Models
@model LoginViewModel
@{
    ViewBag.Title = "Đăng nhập";
}

<main>
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="log-bg-in">
            <div class="menuLog">
                <ul>
                    <li><i class="fa-regular fa-user" style="padding: 5px; border-radius: 50%; border: 2px solid #000"></i></li>
                    <li>Đăng nhập</li>
                </ul>
            </div>
            <div class="formAccount">
                <div class="row-log">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-3 col-form-label" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", style = "height:33px" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row-log">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-3 col-form-label" })
                    <div class="col-md-9">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", style = "height:33px" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row-log">
                    <div class="offset-md-2 col-md-10">
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe)
                        </div>
                    </div>
                </div>
                <div class="row-log">
                    <div class="offset-md-2 col-md-9">
                        <input type="submit" value="Đăng nhập" class="btn btn-outline-dark" style="margin-top:20px;margin-bottom:15px;width:75%" />
                    </div>
                </div>
                <p>
                    @Html.ActionLink("Chưa có tài khoản? Đăng ký ngay!", "Register")
                </p>
                @* Enable this once you have account confirmation enabled for password reset functionality
                    <p>
                        @Html.ActionLink("Forgot your password?", "ForgotPassword")
                    </p>*@

            </div>
        </div>
    }
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}