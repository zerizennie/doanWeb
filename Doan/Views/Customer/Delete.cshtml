@model Doan.DAL.customer

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .bold-text {
        font-weight: bold;
    }

    .button-container {
        display: flex;
    }

    .custom-button {
        cursor: pointer;
        padding: 5px 15px;
        margin: 5px;
        border: 1px solid #000; /* Viền màu đen */
        display: inline-block;
        text-decoration: none;
        color: inherit; /* Kế thừa màu chữ từ cha */
        background-color: inherit; /* Kế thừa màu nền từ cha */
        outline: none; /* Loại bỏ đường viền khi được focus */
    }

    .create-button {
        background-color: #4287CC;
        color: #fff;
    }

    .submit-button {
        margin-left: 215px;
        background-color: #11EBB3;
        color: #000;
    }

    .custom-width {
        width: 300%;
    }

    .hidden-field {
        display: none;
    }
</style>

<div class="container">
    <br />
    <h4>HÃY CÂN NHẮC KỸ TRƯỚC KHI XÓA TÀI KHOẢN NÀY</h4>
    <div>
       
        <hr />
        <dl class="dl-horizontal">
                <dt>
                    Mã khách hàng
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.user_id)
                </dd>

                <dt>
                    Tên đăng nhập
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.username)
                </dd>

                <dt>
                    Email
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.email)
                </dd>

                <dt>
                   Họ
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.first_name)
                </dd>

                <dt>
                    Tên
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.last_name)
                </dd>

                <dt>
                    Số điện thoại
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.phone_num)
                </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="XÓA TÀI KHOẢN" class="btn custom-button submit-button bold-text" />
            <button class="custom-button create-button" onclick="location.href='@Url.Action("Product")'">QUAY VỀ DANH SÁCH KHÁCH HÀNG</button>
        </div>
    </div>
        }
    </div>
</div>